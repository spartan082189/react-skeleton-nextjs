{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": { 
    "semi": ["error"],
    "react/jsx-uses-react": ["error"],
    "react/react-in-jsx-scope": false,
    "react/display-name": false,
    "space-before-function-paren": 0
  }
}